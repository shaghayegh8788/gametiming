                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="آب بازی"
                        android:textColor="#fff"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/play_three2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="گل و شن بازی"
                        android:textColor="#fff"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/col_twoBlue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <TextView
                        android:id="@+id/play_gender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="فقط دختر"
                        android:textColor="#25bfce"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/play_age2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="سنین 3 تا 6 سال"
                        android:textColor="#696969"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/play_sans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="از ساعت 13 تا 16"
                        android:textColor="#25bfce"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/col_three2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"

                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sans_int2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="02"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sans_string2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingRight="10dp"
                        android:text="سانس دوم"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sansThree"
            android:layout_below="@+id/layout_sans"
            android:layout_margin="12dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ticket3" />

            <LinearLayout
                android:id="@+id/seta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/col_one3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/play_one3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="نقاشی"
                        android:textColor="#fff"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/play_two3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="آب بازی"
                        android:textColor="#fff"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/play_three3"

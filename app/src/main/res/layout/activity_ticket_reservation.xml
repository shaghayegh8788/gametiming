<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TicketReservationActivity">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#a5a5a5"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_if_settings_309079" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game"
                        android:textColor="#ffa801"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timing"
                        android:layout_marginLeft="5dp"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Are you Ready for an emotional day"
                    android:textColor="#fff"
                    android:textSize="14sp"

                    />

            </LinearLayout>


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_close_envelope" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="70dp"
                android:layout_above="@+id/bottom">

                <LinearLayout
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/below_header"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/header"

                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/alarm" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="14dp"
                                android:text="Ticket reservation"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="6dp"
                                android:text="رزرو بلیط مسابقات"
                                android:textColor="#34a6de"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@+id/below_header"
                        android:layout_marginTop="-10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="3dp"
                            android:background="#34a6de" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginLeft="17dp"
                            android:background="#34a6de" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/below_header"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="20dp"
                            android:text="لطفا به نکات زیر توجه فرمایید :"
                            android:textColor="#ff7f00"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:lineSpacingExtra="10dp"
                            android:text="شما در این بخش می توانید با انتخاب یکی از سانس های
مورد نظر خود در روزهای پنج شنبه و جمعه در هر ماه، در
برنامه مورد نظر شرکت نمایید
توجه فرمایید که هر سانس با توجه به توضیحات درج شده
بر روی آن برای یک رده سنی خاص و البته با جنسیت مورد
نظر بر گزار میگردد
تعداد ظرفیت هر سانس 100 نفر می باشد که بسرعت
پر میگردد
حضور یکی از والدین در محل برگزاری الزامی است
آدرس محل برگزاری در زیر هر سانس مشخص میگردد
چنانچه در پایان خرید ، مشخصات بلیط خریداری شده را
فراموش کردید ، میتوانید از بخش پیگیری سفارش به آن
دسترسی پیدا نمایید"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/btn_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="#ff7f00"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="با دقت مطالعه نمودم"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </ScrollView>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/bottom_navigation"
        android:background="#696969" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#a5a5a5"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_home"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_hom"
            android:text="صفحه اصلی"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_about"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_ico"
            android:text="درباره ما"
            android:textColor="#fff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_school"
            android:layout_marginTop="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_students_ca"
            android:text="مدارس"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>
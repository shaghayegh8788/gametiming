<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerSchool"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".schools.SchoolActivity">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#a5a5a5"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/settingSchool"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_if_settings_309079" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game"
                            android:textColor="#ffa801"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Timing"
                            android:textColor="#fff"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Are you Ready for an emotional day"
                        android:textColor="#fff"
                        android:textSize="14sp"

                        />

                </LinearLayout>


                <ImageView
                    android:id="@+id/emailSchool"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_close_envelope" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schools"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="مدارس"
                            android:textColor="#6cc0c6"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/dote"
                        android:layerType="software" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="10dp"
                            android:text="این مجموعه افتخار دارد تا با ایجاد شرایط مفرح و شاد برای
 کودکان و نوجوانان این مرزو بوم ، گامی نو را در جهت ایجاد
سرگرمی بردارد.از این رو بسیاری از مدارس غیر دولتی با
این مجموعه شروع به همکاری نموده اند تا ما بتوانیم در
ساعات فراغ از درس دانش آموزان در داخل مدرسه خود
به آنها خدمت رسانی کنیم . از این رو تمامی مدارس می توانند
با هماهنگی و تعیین وقت قبلی ، با این مجموعه  در جهت ایجاد
سرگرمی و مسابقات تفریحی اقدام نمایند"

                            android:textAlignment="center"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dote"
                        android:layerType="software" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="100dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:text="برخی از مدارسی که با مجموعه ما همکاری نموده اند"
                            android:textColor="#ff9000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:orientation="vertical">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewPager_school"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></android.support.v4.view.ViewPager>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/SliderDots"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/viewPager_school"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal"></LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/bottom_navigation"
                android:background="#696969" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#a5a5a5"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/ic_hom"
                    android:text="صفحه اصلی"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <Button
                    android:id="@+id/btn_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/ic_ico"
                    android:text="درباره ما"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/btn_school"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/ic_students_c"
                    android:text="مدارس"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#fff"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <!--<include layout="@layout/menu_navigation"/>-->
            <ScrollView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/txt_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="احمد احمدی"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ویرایش پروفایل"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_child"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ویرایش فرزندان"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="گالری تصاویر"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مشاهده بلیط"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مشاهده خریدها"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_aboutDrawer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="درباره ما"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پشتیبانی"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
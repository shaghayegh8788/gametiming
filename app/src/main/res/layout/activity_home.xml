<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerHome"
    tools:context=".HomeActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TicketReservationActivity">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#a5a5a5"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/settingHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_if_settings_309079" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game"
                        android:textColor="#ffa801"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timing"
                        android:layout_marginLeft="5dp"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Are you Ready for an emotional day"
                    android:textColor="#fff"
                    android:textSize="14sp"

                    />

            </LinearLayout>


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/email"
                android:background="@drawable/ic_close_envelope" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="70dp"
                android:layout_above="@+id/bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:id="@+id/stepA"
                            android:layout_weight="1"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            tools:ignore="Suspicious0dp">
                            <ImageView
                                android:id="@+id/step_a"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:background="@drawable/step_a" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="7dp"
                                    android:gravity="left"
                                    android:text="Ticket reservation"
                                    android:textSize="10dp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="47dp"
                                    android:layout_marginTop="-3dp"
                                    android:text="رزرو بلیط مسابقات"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="0dp"
                                    android:gravity="left"
                                    android:lineSpacingMultiplier="1.1"
                                    android:lines="1"

                                    android:text="Lorem Ipsum has been the industry's standard dummy text ever since the "
                                    android:textSize="7dp"

                                    />

                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/stepB"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            >

                            <ImageView
                                android:id="@+id/step_b"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@drawable/step_b"
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="85dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="left"
                                    android:text="Photo Gallery"
                                    android:textSize="10dp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="-5dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginTop="-3dp"
                                    android:text="گالری عکس"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="0dp"
                                    android:gravity="right"
                                    android:lineSpacingMultiplier="1.1"
                                    android:lines="1"

                                    android:text="Lorem Ipsum has been the industry's standard dummy text ever since the "
                                    android:textSize="7dp"

                                    />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/stepC"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            >

                            <ImageView
                                android:id="@+id/step_c"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@drawable/step_c"
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="7dp"
                                    android:gravity="left"
                                    android:text="Follow the order"
                                    android:textSize="10dp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="68dp"
                                    android:layout_marginTop="-3dp"
                                    android:text="پیگیری سفارش"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="0dp"
                                    android:gravity="left"
                                    android:lineSpacingMultiplier="1.1"
                                    android:lines="1"

                                    android:text="Lorem Ipsum has been the industry's standard dummy text ever since the "
                                    android:textSize="7dp"

                                    />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/stepD"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            >

                            <ImageView
                                android:id="@+id/step_d"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@drawable/step_d"
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="left"
                                    android:text="Celebration news"
                                    android:textSize="10dp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginTop="-3dp"
                                    android:text="اخبار جشن ها"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="0dp"
                                    android:gravity="right"
                                    android:layout_marginLeft="5dp"
                                    android:lineSpacingMultiplier="1.1"
                                    android:lines="1"
                                    android:text="Lorem Ipsum has been the industry's standard dummy text ever since the "
                                    android:textSize="7dp"

                                    />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_above="@+id/bottom_navigation"
            android:background="#696969" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#a5a5a5"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_homeHome"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_ho"
                android:text="صفحه اصلی"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_aboutHome"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_ico"
                android:text="درباره ما"
                android:textColor="#fff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_schoolHome"
                android:layout_marginTop="0dp"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_students_ca"
                android:text="مدارس"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="left"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <ScrollView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_user"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="نام نام خانوادگی"
                        android:id="@+id/txt_info"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textSize="16dp"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_edit"
                        android:textSize="14dp"
                        android:text="ویرایش پروفایل"
                        android:textColor="#848484"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_child"
                        android:textSize="14dp"
                        android:text="ویرایش فرزندان"
                        android:textColor="#848484"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_gallery"
                        android:textSize="14dp"
                        android:text="گالری تصاویر"
                        android:textColor="#848484"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_ticket"
                        android:textSize="14dp"
                        android:text="مشاهده بلیط"
                        android:textColor="#848484"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_shop"
                        android:textSize="14dp"
                        android:text="مشاهده خریدها"
                        android:textColor="#848484"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:id="@+id/btn_aboutDrawer"
                        android:text="درباره ما"
                        android:textColor="#848484"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/btn_support"
                        android:text="پشتیبانی"
                        android:textSize="14dp"
                        android:textColor="#848484"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
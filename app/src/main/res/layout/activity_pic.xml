<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pictureVideo.PicActivity">

    <include layout="@layout/header_game"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#828282"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/bottom"
android:layout_alignParentBottom="true"
android:orientation="vertical">

<ImageView
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:layout_above="@+id/bottom_navigation"
    android:background="#696969" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#a5a5a5"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_home"
        android:background="#00000000"
        android:drawableTop="@drawable/ic_hom"
        android:text="صفحه اصلی"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_about"
        android:background="#00000000"
        android:drawableTop="@drawable/ic_ico"
        android:text="درباره ما"
        android:textColor="#fff" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_school"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        android:drawableTop="@drawable/ic_students_ca"
        android:text="مدارس"
        android:textColor="#fff" />
</LinearLayout>

</LinearLayout>
</RelativeLayout>